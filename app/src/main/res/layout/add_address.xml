<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddAddress">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:background="@color/black">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back"
            android:id="@+id/back1"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addtext"
            android:text="Add Address"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/imgView_line"
            android:background="@color/white"
            android:layout_below="@+id/addtext"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchAddress"
        android:hint="Enter Address..."
        android:drawableLeft="@drawable/ic_outline_location_on"
        android:focusable="false"
        android:layout_below="@+id/r1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/image1"
        android:layout_below="@+id/searchAddress"
        android:src="@drawable/location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texttype"
        android:text="Address Type :"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/image1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressType"
        android:textColor="@color/black"
        android:layout_below="@+id/image1"
        android:layout_toRightOf="@+id/texttype"
        android:hint="Eg, Home"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="Address Line :"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/addressType"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressline"
        android:textColor="@color/black"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        android:text="Address Line 2 :"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/addressline"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressline2"
        android:textColor="@color/black"
        android:layout_below="@+id/text5"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="State :"
        android:textColor="@color/black"
        android:layout_below="@+id/addressline2"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/state"
        android:textColor="@color/black"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:text="Postcode :"
        android:textColor="@color/black"
        android:layout_below="@+id/addressline2"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/text2"
        android:layout_marginLeft="150dp"/>

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/postcode"
        android:textColor="@color/black"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/state"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:text="City :"
        android:textColor="@color/black"
        android:layout_below="@+id/state"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:textColor="@color/black"
        android:layout_below="@+id/text3"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:text="Save"
        android:layout_below="@+id/city"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"/>

</RelativeLayout>